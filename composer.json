{
  "name": "hanan/telemetry-data-processing",
  "description": "Telemetry Data Processing Web Application",
  "type": "project",
  "require": {
    "php": ">=8.1",
    "php-di/php-di": "^7.0",
    "slim/psr7": "^1.7",
    "slim/slim": "^4.12",
    "slim/twig-view": "^3.4",
    "twig/twig": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "Helpers\\": "src/helpers/",
      "Controllers\\": "src/controllers/",
      "Models\\": "src/models/",
      "Views\\": "src/views/",
      "Config\\": "app/config/",
      "Routes\\": "app/routes/"
    }
  },
  "scripts": {
    "start": [
      "php -S localhost:8000 -t public"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  }
}
