{% extends 'base.html.twig' %}

{% block title %}Logs | {{ page_title }}{% endblock %}

{% block content %}
<div class="logs-wrapper">

    <div class="logs-header">
        <div>
            <h2 class="logs-title">Device Logs</h2>
            <p class="logs-subtitle">
                View the latest telemetry messages received from your devices.
            </p>
        </div>

        <form method="get" action="{{ logsRoute }}" class="logs-filter-form">
            <label for="device_id">Filter by device:</label>
            <select name="device_id" id="device_id" class="logs-select">
                <option value="">All devices</option>
                {% for device in devices %}
                    <option value="{{ device.device_id }}"
                        {% if selectedDeviceId == device.device_id %}selected{% endif %}>
                        {{ device.device_id }} ({{ device.total_messages }} msgs)
                    </option>
                {% endfor %}
            </select>
            <button type="submit" class="submit-button logs-filter-button">Apply</button>
        </form>
    </div>

    {% if messages is empty %}
        <div class="logs-empty">
            No telemetry messages found yet. Run your device simulator to generate data.
        </div>
    {% else %}
        <div class="logs-table-wrapper">
            <table class="logs-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Device</th>
                        <th>Switches</th>
                        <th>Fan</th>
                        <th>Temperature (Â°C)</th>
                        <th>Last Key</th>
                        <th>Received At</th>
                    </tr>
                </thead>
                <tbody>
                    {% for row in messages %}
                        <tr>
                            <td>{{ row.id }}</td>
                            <td>{{ row.device_id }}</td>
                            <td>
                                S1: {{ row.switch1 }} |
                                S2: {{ row.switch2 }} |
                                S3: {{ row.switch3 }} |
                                S4: {{ row.switch4 }}
                            </td>
                            <td>{{ row.fan }}</td>
                            <td>{{ row.device_temperature }}</td>
                            <td>{{ row.last_key_entered }}</td>
                            <td>{{ row.received_date }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}
